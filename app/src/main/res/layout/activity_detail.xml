<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.detail.DetailActivity">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_backdrop_detail"
                android:scaleType="centerCrop"
                android:src="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        <androidx.appcompat.widget.LinearLayoutCompat
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/linear_main_movies"
                android:orientation="horizontal"
                android:layout_marginTop="-30dp"
                android:layout_below="@+id/iv_backdrop_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/iv_poster_movie_detail"
                    android:src="@color/colorAccent"
                    android:layout_width="100dp"
                    android:layout_height="150dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_title_detail"
                        android:fontFamily="sans-serif-light"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="@string/movie_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_vote"
                            android:text="Vote Average"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_below="@+id/tv_vote"
                            android:id="@+id/tv_release"
                            android:text="Release Date"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_below="@id/tv_release"
                            android:id="@+id/tv_language"
                            android:text="Language"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_toRightOf="@id/tv_vote"
                            android:id="@+id/tv_vote_value"
                            android:text="Vote"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_alignBaseline="@id/tv_release"
                            android:layout_toRightOf="@id/tv_vote"
                            android:id="@+id/tv_release_value"
                            android:text="Release Date"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_alignBaseline="@id/tv_language"
                            android:layout_toRightOf="@id/tv_vote"
                            android:id="@+id/tv_language_value"
                            android:text="Language"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Overview"
                android:layout_below="@id/linear_main_movies"
                android:id="@+id/tv_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <View
                android:id="@+id/tv_line"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/tv_overview"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_below="@id/tv_line"
                android:id="@+id/tv_overview_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>